<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp">

    <TextView
        android:id="@+id/deleteCollection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/BluePrimary"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Do you want to delete 'Collection Name'?"
        android:textColor="@color/White"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/yesDeleteCollection"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/yes_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/noDeleteCollection"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/no_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>