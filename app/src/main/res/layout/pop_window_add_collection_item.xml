<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp">



    <TextView
        android:id="@+id/aci"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:fontFamily="@font/montserrat"
        android:text="New item"
        android:background="@color/BluePrimary"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/cin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/montserrat"
        android:text="Collection item name"
        android:textColor="#36A4E1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cin"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:ems="15"
        android:fontFamily="@font/montserrat"
        android:inputType="textPersonName"
        android:minHeight="30dp"
        android:singleLine="true"
        android:textColor="#36A4E1"
        android:textColorHighlight="#ff0000"
        android:textColorHint="#36A4E1"
        android:textColorLink="#36A4E1"
        android:textCursorDrawable="@android:color/holo_blue_dark"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/saveItemBtn"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="12dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/editText2"
        app:srcCompat="@drawable/save_btn" />

    <ImageView
        android:id="@+id/cancelItemBtn"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="1dp"

        android:layout_marginBottom="9dp"
        android:layout_toLeftOf="@id/saveItemBtn"
        android:clickable="true"
        app:srcCompat="@drawable/cancel_btn" />

</RelativeLayout>